{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:vue/recommended",  "prettier"],
  "globals": {
    "Vue": true,
    "chrome": true,
    "document": true,
    "window": true
  },
  "parserOptions": {
     "parser": "@typescript-eslint/parser",
    "ecmaVersion": 8,
    "sourceType": "module",
    "experimentalObjectRestSpread": true
  },
  "plugins": ["vue"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off"
  }
}
